<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@android:color/black"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="0dp"
            tools:layout_conversion_absoluteWidth="40dp"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            tools:layout_conversion_absoluteX="40dp"
            tools:layout_conversion_absoluteY="0dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/textView1"
            android:layout_marginLeft="0dp" />

        <Button
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:id="@+id/myButton"
            android:text="Click me!"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="16dp"
            tools:layout_conversion_absoluteWidth="374dp"
            tools:layout_conversion_absoluteHeight="48dp"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            card_view:layout_constraintTop_toBottomOf="@+id/textView1"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="0dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>