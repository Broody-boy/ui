<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.cs4730.supportpalettedemo.MainActivity"
    android:orientation="vertical">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/nyancat"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/iv_vibrant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vibrant"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/iv_vibrantdark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vibrant Dark"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_vibrant"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_vibrant"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/iv_vibrant" />

    <TextView
        android:id="@+id/iv_vibrantlight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vibrant Light"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_vibrantdark"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/iv_vibrantdark"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_vibrantdark"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/iv_muted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Muted"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_vibrantlight"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_vibrantlight"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/iv_vibrantlight" />

    <TextView
        android:id="@+id/iv_muteddark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Muted Dark"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_muted"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_muted"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/iv_muted"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/iv_mutedlight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Muted Light"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_muteddark"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_muteddark"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/iv_muteddark"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
