<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hello"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callIntent"
        android:text="Call browser"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp" />


    <Button
        android:id="@+id/Button06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callIntent"
        android:text="Take picture"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/Button04"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Button04" />


    <Button
        android:id="@+id/Button07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callIntent"
        android:text="Show contacts"
        app:layout_constraintLeft_toRightOf="@+id/Button06"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/Button06"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/Button08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callIntent"
        android:text="Edit first contact"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/Button06"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Button06" />

    <Button
        android:id="@+id/Button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callIntent"
        android:text="Pick a Contact"
        app:layout_constraintBottom_toBottomOf="@+id/Button08"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/Button08"
        android:layout_marginLeft="8dp" />


    <Button
        android:id="@+id/Button09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callIntent"
        android:text="Call ActivityTwo"
        app:layout_constraintLeft_toLeftOf="@+id/Button08"

        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Button08" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callIntent"
        android:text="Show Map"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Button02"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/Button02" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callIntent"
        android:text="Search on Map"
        app:layout_constraintLeft_toRightOf="@+id/Button04"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/Button04"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callIntent"
        android:text="Call Someone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Button01"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/Button01" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callIntent"
        android:text="Dial"
        app:layout_constraintLeft_toRightOf="@+id/Button02"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/Button02"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>